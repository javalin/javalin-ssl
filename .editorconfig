root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.java]
continuation_indent_size = 4

[*.kt]
continuation_indent_size = 8

[*.md]
trim_trailing_whitespace = false

[*.{js,css,html}]
insert_final_newline = false

[*.{yml,yaml,json}]
indent_size = 2